# ============================
# CONFIGURACIÓN DEL BACKEND
# ============================

# Entorno de ejecución (development o production)
FLASK_ENV=development

# Clave secreta para sesiones (CAMBIAR EN PRODUCCIÓN)
SECRET_KEY=mi-clave-super-secreta-cambiar-en-produccion

# Nombre de la base de datos
DATABASE_NAME=academia.db

# Orígenes permitidos para CORS (separados por coma)
# En desarrollo: frontend local en puerto 5173
# En producción: dominio real de tu frontend
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
